
<div class="col-sm-6">
  <div class="panel panel-primary">
    <div class="panel-body">
      <div class="form-group col-sm-6">
        <div class="col-xs-12">
          <strong>First name:</strong>
          <%= @user.first_name %>
        </div>
      </div>
      <div class="form-group col-sm-6">
        <div class="col-xs-12">
          <strong>Last name:</strong>
          <%= @user.last_name %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-12">
  <%= link_to 'Edit', edit_user_path(@user), type: "button", class: "btn btn-default" %> 
  <%= link_to 'Back', users_path, type: "button", class: "btn btn-default" %>
</div>