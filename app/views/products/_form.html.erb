
<div>
  <%= form_for @product, :html => {class: "col-xs-12 col-md-8"} do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
 
    <div class="panel panel-primary">
      <div class="panel-body">
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <%= f.label :product_year %><br>
            <%= f.number_field :product_year, class: "form-control" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <%= f.label :description %><br>
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <%= f.label :price %><br>
            <%= f.number_field :price, class: "form-control" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <%= f.label :image_url %><br>
            <%= f.text_field :image_url, class: "form-control" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <%= f.label :sold_date %><br>
            <%= f.date_field :sold_date, class: "form-control" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <%= f.label :color %><br>
            <%= f.select :colour, ['red', 'yellow', 'green', 'blue', 'black', 'white'], {} , {class: "form-control"} %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <div class="col-xs-12">
            <div class="actions">
              <%= f.submit 'Update Product', class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>



