
<div class="container-fluid">
  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="item">
          <%= image_tag(@product.image_url, class: "img-responsive") %>
        </div>

        <div class="panel-footer">
          <div class="row">
            <h3 class="col-xs-9"><%= @product.name %></h3>
            <p class="col-xs-1 price-lg">$<%= @product.price %></p>
            <p class="col-xs-1 marker"><span class="glyphicon glyphicon-map-marker"></span></p>
          </div>
          <p class="description"><%= @product.description %></p>
        </div>
      </div>
    </div>
    <div class="well">
      <p>review1</p>
      <p>review2</p>
      <p>review3</p>
    </div>
    <%= link_to 'Edit', edit_product_path(@product), type: "button", class: "btn btn-default"%>
    <%= link_to 'Back', products_path, type: "button", class: "btn btn-default" %>
  </div>
</div>




