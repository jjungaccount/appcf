
<div class="container-fluid">
  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="item">
          <%= image_tag(@product.image_url, class: "img-responsive") %>
        </div>

        <div class="panel-footer">
          <div class="row">
            <h3 class="col-xs-9"><%= @product.name %></h3>
            <p class="col-xs-1 price-lg">$<%= @product.price %></p>
            <a href="#" class="col-xs-1"><span class="glyphicon glyphicon-map-marker"></span></a>
          </div>
          <p class="description"><%= @product.description %></p>
          <div class="row">
            <p class="col-sm-6 col-xs-12">Average Rating: 
              <div class="rated col-sm-6 col-xs-12" data-score="<%= @product.average_rating %>"></div>
            </p>
          </div>
        </div>
      </div>
    </div>

    <%= render 'new_comment' %>
    <%= render 'comments' %>

    <%= link_to 'Edit', edit_product_path(@product), type: "button", class: "btn btn-default"%>
    <%= link_to 'Back', products_path, type: "button", class: "btn btn-default" %>
  </div>
</div>




